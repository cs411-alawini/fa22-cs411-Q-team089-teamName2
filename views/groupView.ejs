<!DOCTYPE html>
<html lang="en">
 <head>
   <title>TeamName2 Project</title>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
 </head>

 <body>
  <div class="container mt-4">
    <a href="/groups/landing?userId=<%userId%>" class="btn btn-primary position-relative">Back</a>
  </div>
  
  <div class="container mt-4">
    <h1 class="text-center"><%= groupName%></h1>
  </div>

  <div class="container mt-4">
    <div class="card">
      <div class="class-body">
        <div class = "row">
          <button id="avgCompRateBtn" class="btn btn-primary m-2">Refresh</button>
          <h4 class="m-2">Average Completion Rate:</h4>
          <h4 id="avgCompRate" class="m-2"></h4>
        </div>
        <div class="row">
          <button id="mostProdDayBtn" class="btn btn-primary m-2">Refresh</button>
          <h4 class="m-2">Most Productive Day:</h4>
          <h4 id="mostProdDay" class="m-2"></h4> 
        </div>
      </div>
    </div>
  </div>
  <div class="container mt-4">
    <div class="card">
      <div class="card-body">
        <h1 class="text-center">Members</h1>
      </div>
      <div id="accordian">
        <% data.forEach(item => {%>
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="mx-4">
                  <h4><%= item.names%></h4>
                </div>
                <div class="mx-4">
                  <a href="" class="btn btn-primary">To be implemented</a>
                </div>
                <div class="mx-4">
                  <a href="" class="btn btn-primary">To be implemented</a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </div>
</body>
<script src="/js/groupViewScript.js"></script>
</html>