<!DOCTYPE html>
<html lang="en">
 <head>
   <title>TeamName2 Project</title>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
 </head>

  <body>
    <div class="container mt-4">
      <a href="/groupView/landing?userId=<%= userId%>&groupId=<%= groupId%>&groupName=<%= groupName%>" class="btn btn-primary position-relative">Back to Group</a>
    </div>
    <div class="container mt-4">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center">Tasks</h1>
        </div>
        <div id="accordian">
          <% data.forEach(item => {%>
          <div class="card m-2">
            <div class="card-body">
              <div class="row">
                <div class="col-sm">
                  <p class="mx-4"><%= item.taskContent%></p>
                </div>
                <div class="col-sm">
                  <form action="/restrictedTasks/createAlert?taskId=<%= item.taskId%>" method="POST">
                    <input type="text" class="form-control col-lg-9" placeholder="Message" name="newAlert">
                    <button type="submit" class="btn btn-primary mt-2">Submit</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>